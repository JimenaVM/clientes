<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_bg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="People"
        android:textSize="30sp"
        android:id="@+id/textView" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView">

        <FrameLayout
            android:layout_width="369dp"
            android:layout_height="wrap_content"
            android:background="#080808">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Id cliente"
                android:id="@+id/textView5"
                android:layout_gravity="left|center_vertical"
                android:textColor="#fefcfc"
                android:textSize="25dp" />

            <EditText
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:layout_gravity="center" />

            <FrameLayout
                android:layout_width="369dp"
                android:layout_height="wrap_content"
                android:background="#080808"
                android:layout_gravity="center_horizontal|bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Id cliente :        "
                    android:id="@+id/textView6"
                    android:layout_gravity="left|center_vertical"
                    android:textColor="#fefcfc"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <EditText
                    android:layout_width="223dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText2"
                    android:layout_gravity="right|center_vertical" />
            </FrameLayout>

        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#555555">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Nombre :       "
                android:id="@+id/textView7"
                android:textColor="#fefcfc"
                android:textSize="15dp"
                android:textStyle="bold"
                android:typeface="sans" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText3"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:id="@+id/vercliente"
                android:layout_gravity="right|center_vertical"
                android:src="@android:drawable/ic_media_play"
                android:background="@drawable/boton" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="CONTRATOS"
            android:id="@+id/textView9"
            android:textColor="#ffffff"
            android:textIsSelectable="false"
            android:textSize="18dp"
            android:textStyle="bold"
            android:typeface="sans" />

        <ImageButton
            android:layout_width="61dp"
            android:layout_height="wrap_content"
            android:id="@+id/vercontrato"
            android:layout_gravity="right"
            android:src="@drawable/abc_ic_go_search_api_mtrl_alpha" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="237dp"
            android:id="@+id/listView"
            android:layout_centerHorizontal="true"
            android:background="#fcfcfc"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/button"
            android:layout_weight="0.60" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="839dp"
        android:layout_marginStart="839dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:src="@drawable/titucliente"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
